{
    "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
    "runtime.version": "LuaJIT",
    "diagnostics": {
        "enable": true,
        "globals": [
          "vim",
          "describe",
          "pending",
          "it",
          "before_each",
          "after_each",
          "setup",
          "teardown",
          "lfs"
        ]
    },
    "workspace": {
        "library": [
            "runtime/lua",
            "${3rd}/lfs/library"
        ],
        "checkThirdParty": false,
        "maxPreload": 2000,
        "preloadFileSize": 1000
    },
    "telemetry.enable": false
}
